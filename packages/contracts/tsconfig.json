{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "./",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "strictNullChecks": false
  },
  "include": ["./scripts", "./test"],
  "files": ["./hardhat.config.ts"],
  "exclude": [
    "**/node_modules/**",
    "**/packages/subgraph/**",
    "**/packages/**/tests/**",
    "**/packages/**/types/**",
    "**/packages/**/dist/**",
    "**/packages/**/build/**",
    "**/packages/**/out/**"
  ]
}
